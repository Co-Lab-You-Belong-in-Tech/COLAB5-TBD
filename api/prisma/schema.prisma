// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
   id          String   @id @default(uuid())
   givenName   String?
   familyName  String?
   displayName String?
   email       String   @unique
   googleId    String?
   twitterId   String?
   facebookId  String?
   rooms       Room[]
}

model Room {
   id       String   @id @default(uuid())
   userId   String
   user     User     @relation(fields: [userId], references: [id])
   typeId   String
   type     RoomType @relation(fields: [typeId], references: [id])
   name     String?
   length   Int?
   width    Int?
}

model RoomType {
   id       String   @id @default(uuid())
   name     String
   rooms    Room[]
}